<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cmu.nuts.coffee9.preferences.fragment.ProfileWithEditFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_review"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWhite"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/review_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/review__title_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="comment"
            android:textSize="20sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:padding="5dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="no comment"
            android:textColor="@color/black_overlay"
            android:textSize="25sp" />

        <LinearLayout
            android:id="@+id/comment_review"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/structured_relative_interaction"
            android:layout_below="@+id/comment"
            android:background="@color/colorGray"
            android:orientation="vertical" />

        <RelativeLayout
            android:id="@+id/structured_relative_interaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#E0E0E0"
            android:gravity="bottom">

            <EditText
                android:id="@+id/add_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_margin="5dp"
                android:layout_toStartOf="@+id/send"
                android:gravity="bottom"
                android:hint="add comment"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLines="5"
                android:padding="10dp"
                android:textColorHint="#B0B0B0" />

            <ImageButton
                android:id="@+id/send"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignBottom="@id/add_comment"
                android:layout_alignParentEnd="true"
                android:background="@drawable/ic_send" />
        </RelativeLayout>


    </android.support.v7.widget.LinearLayoutCompat>

</LinearLayout>

