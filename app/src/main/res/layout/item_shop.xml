<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/item_shop_card_view"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="3dp"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/item_shop_img"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/item_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/item_shop_img"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:maxLength="20"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/item_shop_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/item_shop_open_time"
                android:layout_below="@+id/item_shop_name"
                android:layout_toEndOf="@+id/item_shop_img"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/item_shop_open_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/item_shop_img"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/item_shop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/item_shop_sid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_shop_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_shop_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:visibility="gone" />
            <TextView
                android:id="@+id/item_shop_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.github.ivbaranov.mfb.MaterialFavoriteButton
                android:id="@+id/love"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                app:mfb_animate_favorite="true"
                app:mfb_animate_unfavorite="false"
                app:mfb_bounce_duration="300"
                app:mfb_color="black"
                app:mfb_favorite_image="@drawable/ic_fav"
                app:mfb_not_favorite_image="@drawable/ic_not_fav"
                app:mfb_padding="12"
                app:mfb_rotation_angle="360"
                app:mfb_rotation_duration="400"
                app:mfb_size="48"
                app:mfb_type="heart" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>