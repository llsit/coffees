<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/item_shop_card_view"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="3dp"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/item_shop_img"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/item_shop_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/item_shop_img"
                android:maxLength="20"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_shop_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_shop_name"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/item_shop_img"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/item_shop_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_below="@+id/item_shop_detail"
                android:layout_toEndOf="@+id/item_shop_img"
                android:text="5"
                android:visibility="gone" />

            <RatingBar
                android:id="@+id/item_shop_ratingbar"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_shop_detail"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@+id/item_shop_img"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="3.0"
                android:stepSize="1.0" />

            <TextView
                android:id="@+id/item_shop_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/item_shop_sid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_shop_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_shop_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_shop_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:visibility="gone" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:padding="@dimen/range_12"
                android:src="@drawable/ic_fav" />

            <ImageView
                android:id="@+id/not_fav"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="10dp"
                android:padding="@dimen/range_12"
                android:src="@drawable/ic_not_fav" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>