<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.cmu.nuts.coffee9.preferences.fragment.ProfileWithEditFragment">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_display_review"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWhite"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageView
            android:id="@+id/review_display_back"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/review_display_title_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Review"
            android:textSize="20sp"
            android:textStyle="bold" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/display_review_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="18dp"
            android:src="@drawable/ic_profile" />

        <TextView
            android:id="@+id/displat_review_name_reviewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/display_review_image"
            android:paddingBottom="5dp"
            android:text="Viral Android"
            android:textSize="24sp" />

        <RatingBar
            android:id="@+id/item_review_ratingBar"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/displat_review_name_reviewer"
            android:layout_toEndOf="@+id/display_review_image"
            android:numStars="5"
            android:rating="3.0"
            android:stepSize="1.0" />

        <TextView
            android:id="@+id/item_review_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_review_ratingBar"
            android:layout_toEndOf="@+id/item_review_image"
            android:text="Free android tutorials and examples for beginners and expert."
            android:textColor="#8b8b8b" />

        <TextView
            android:id="@+id/item_review_datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_review_description"
            android:layout_marginTop="12sp"
            android:layout_toEndOf="@+id/item_review_image"
            android:text="12.00 : 12/03/2061"
            android:textColor="#8b8b8b" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="?android:attr/windowBackground"
            android:foreground="?attr/selectableItemBackground"
            app:itemBackground="@color/colorOrange"
            app:itemIconTint="@android:color/white"
            app:itemTextColor="@android:color/white"
            app:menu="@menu/menu_display_review" />
    </LinearLayout>


</LinearLayout>

