<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout5"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/AllButtonSelector"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:background="@drawable/button"
        android:text="@string/txt_all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/yourButtonSelector"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/button"
        android:text="@string/txt_add_by_me"
        app:layout_constraintStart_toEndOf="@+id/AllButtonSelector"
        app:layout_constraintTop_toTopOf="@+id/AllButtonSelector" />

    <GridView
        android:id="@+id/image_data_shop_gridview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="8dp"
        android:numColumns="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourButtonSelector" />


</android.support.constraint.ConstraintLayout>