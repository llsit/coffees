<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="5dp">


        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/header_cover_image"
            android:background="@color/color_orange"
            android:elevation="4dp"
            android:paddingBottom="24dp">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/img_profile2"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:paddingTop="20dp"
                android:src="@drawable/ic_user"
                android:textAlignment="center"
                app:civ_border_color="#FF000000"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/display_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_profile2"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/range_15"
                android:layout_marginTop="@dimen/range_15"
                android:text="@string/app_name"
                android:textColor="#fff"
                android:textSize="24sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorGray"
            android:padding="@dimen/range_15">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="UselessParent">

                <RelativeLayout
                    android:id="@+id/top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/range_12"
                    android:background="@color/color_white"
                    android:clickable="true"
                    android:padding="@dimen/range_12"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/ivContactItem1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/range_12"
                        android:layout_marginRight="@dimen/range_12"
                        android:src="@drawable/ic_email"
                        android:contentDescription="@string/app_name"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/display_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/range_12"
                        android:layout_marginStart="@dimen/range_12"
                        android:layout_toEndOf="@id/ivContactItem1"
                        android:layout_toRightOf="@id/ivContactItem1"
                        android:text="@string/email"
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#212121"
                        tools:ignore="RtlHardcoded" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/top"
                    android:background="@color/color_white"
                    android:clickable="true"
                    android:padding="@dimen/range_12"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/ivContactItem12"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/range_12"
                        android:layout_marginRight="@dimen/range_12"
                        android:src="@drawable/ic_date"
                        tools:ignore="RtlHardcoded" />

                    <TextView
                        android:id="@+id/display_birth_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/range_12"
                        android:layout_marginStart="@dimen/range_12"
                        android:layout_toEndOf="@id/ivContactItem12"
                        android:layout_toRightOf="@id/ivContactItem12"
                        android:text=""
                        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                        android:textColor="#212121"
                        tools:ignore="RtlHardcoded" />


                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/progressBar_profile"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/display_uid"
            android:layout_marginEnd="50dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:visibility="visible" />

        <Button
            android:id="@+id/profile_btn_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginEnd="100dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/custom_border_round"
            android:padding="12dp"
            android:paddingStart="16dp"
            android:text="@string/logout"
            android:textColor="@color/colorRed"
            android:visibility="gone"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/display_uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/display_reg_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_done"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/display_uid"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/custom_border_round"
            android:text="@string/btn_message_preferences"
            android:textColor="@color/color_pastel_blue"
            android:visibility="gone" />
    </android.support.v7.widget.LinearLayoutCompat>
</ScrollView>
