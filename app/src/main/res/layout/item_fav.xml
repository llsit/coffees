<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/item_fav_card_view"
        android:layout_width="match_parent"
        android:layout_height="120sp"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="3dp"
        app:cardCornerRadius="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/item_fav_img"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/app_name"
                android:padding="5dp"
                android:src="@drawable/logo" />

            <TextView
                android:id="@+id/item_fav_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/item_fav_img"
                android:text="@string/app_name"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_fav_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/item_fav_open_time"
                android:layout_below="@+id/item_fav_name"
                android:layout_toEndOf="@+id/item_fav_img"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/item_fav_open_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_toEndOf="@+id/item_fav_img"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/item_fav_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:text="@string/app_name" />

            <TextView
                android:id="@+id/item_fav_sid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_fav_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_fav_uid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:visibility="gone" />

            <TextView
                android:id="@+id/item_fav_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:visibility="gone" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageButton
                android:id="@+id/close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5sp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_close"
                android:background="@color/color_white"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>